@model NDVida_Site.Models.LoginViewModel

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()

    <div id="content" role="main">

        <div class="page-header larger larger-desc" style="background-image:url('/images/headers/bg-cabecalho-2-2268x200px.jpg')">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h1 style="color:#FFFFFF"><br/><br/></h1>
                    </div><!-- End .col-md-6 -->
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .page-header -->

        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-wrapper">
                        <h2 class="title-underblock custom mb30">Login</h2>
                        <form action="#">
                            <div class="form-group">
                                <label for="username" class="input-desc">Email</label>                                
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                            </div><!-- End .from-group -->
                            <div class="form-group mb10">
                                <label for="password" class="input-desc">Senha</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Senha" })
                            </div><!-- End .from-group -->
                            <div class="form-group text-right clear-margin helper-group">
                                <!--<a href="/Account/ForgotPassword">Esqueceu a senha?</a>-->
                            </div><!-- End .form-group -->
                            <!--<div class="form-group mt15-r">
                                <div class="checkbox">
                                    <label class="custom-checkbox-wrapper">
                                        <span class="custom-checkbox-container">
                                            <input type="checkbox" name="remember" id="remember" value="true">
                                            <span class="custom-checkbox-icon"></span>
                                        </span>
                                        <span>Lembre-me!</span>
                                    </label>
                                </div>
                            </div>-->

                            <div class="form-group">
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            </div><!-- End .from-group -->
                        
                            <div class="form-group mb5">
                                <input type="submit" class="btn btn-custom" value="Entrar">
                            </div><!-- End .from-group -->
                        </form>
                    </div><!-- End .form-wrapper -->

                </div><!-- End .col-sm-6 -->

                <div class="mb40 visible-xs"></div><!-- space -->

                <div class="col-sm-6">
                    <br/><br/>
                    <h2 class="title-underblock custom mb40">Criar Conta</h2>

                    <p>Para fazer o login na NDVIDA você precisa primeiro se registrar para criar uma conta.</p>
                    <p>Vá para página de <a href="/Account/Register">Registro</a> e preencha os campos solicitados.</p>

    <div class="mb10"></div><!-- space -->


</div><!-- End .col-sm-6 -->
            </div><!-- End .row -->
        </div><!-- End .container -->

        <div class="mb30 mb10-xs"></div><!-- space -->

    </div><!-- End #content -->
}